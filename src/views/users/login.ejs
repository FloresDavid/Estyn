<!DOCTYPE html>
<html lang="es">
    
<%- include('../partials/head',{
    title:"STYN - INGRESO"
}) %>

<body class="body__login">
    
    <main class="login__main">
        <div class="div__logo"> <a href="/"><img src="/images/Logo_Estyn.png" alt=""></a></div>
       <div class="login__div__saludo"> <h1 class="login__saludo">HOLA ME <br> ALEGRA <br> VERTE <br> POR AQUI</h1></div>

    <section class="login__sectionform">
        <h3 class="login__sectionform--titulo">
            Iniciar Sesion
        </h3>
    <form action="/usuarios/ingreso" class="login__section__form" method="post">
    
    <div class="login__section__formdiv">
    
    <input class="login__section__formdiv--escribir" type="text" name="email" id="email" placeholder="correo electronico"  value="<%= locals.old && old.email ? old.email : null %>">
    <small><%= locals.errors && errors.email? errors.email.msg:null %></small>
</div>
    <div class="login__section__formdiv">
    
    <input class="login__section__formdiv--escribir"  type="password" name="contraseña" id="contraseña" placeholder="contraseña">
    <span class="login__section__form__ojito"><i class="fa-regular fa-eye"></i></span>
    <small><%= locals.errors && errors.contraseña? errors.contraseña.msg:null %></small>
    </div>
    <div class="login__section__formboton">
    <label for="iniciar"></label>
    <input type="submit" value="INICIAR" id="iniciar">
    </div>
</form>
    <div class="login__section__formP">
        <p><a href="/usuarios/registro">Crear cuenta</a></p>    
    </div> 
    <div class="login__section__formP">            
        <a href="#">Olvide mi contraseña</a>
    </div>
    
    


    </section>
    </main>
 
    <%- include('../partials/footer') %>

    

</body>
</html>