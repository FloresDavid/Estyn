
<!DOCTYPE html>
<html lang="ES">

<%- include('../partials/head',{
	title : 'Editar'
}) %>


<body class="product-admin-body">
	<%- include('../partials/header-admin') %>
	<main class="product-admin-main">
        <h1 class="product-admin-title">Editar</h1>
        <section class="product-admin-main-section">
            <div class="product-admin-main-section-div">
                <div>
                    <h6><a href="/dashboard"> Admin </a>> Editando <%= nombre%></h6>
                    <hr>
                </div>  
                <div class="product-admin-container-de-form">
                    <form action="/productos/editado/<%= id %>?_method=put" method="post" enctype="multipart/form-data" >
                        <h4>Editando <%= nombre %></h4>
                        <hr>
                        <br>
                        <div class="product-admin-juego">
                            <label for="name">Juego</label>
                            <input name="name" type="text" id="name" value="<%=nombre%>">
                        </div>
                        <br>
                        <hr>
                        <br>
                        <div class="product-admin-precio-plataforma-stock">
                            <div class="product-admin-precio">
                                <label for="price">Precio</label>
                                <input name="price" type="text" id="price" value="<%=Intl.NumberFormat('de-DE').format(precio)%>">
                            </div>
                            <div class="product-admin-plataforma">
                                <label for="plataform">Plataforma</label>
                                <select name="plataform" id="plataform" aria-label="Floating label select example">
                                    <option <%= plataforma === "PS3" && "selected" %> value="PS3">PS3</option>
                                    <option <%= plataforma === "PS4" && "selected" %> value="PS4">PS4</option>
                                    <option <%= plataforma === "PS5" && "selected" %> value="PS5">PS5</option>
                                    <option <%= plataforma === "XBOX_ONE" && "selected" %> value="XBOX_ONE">XBOX ONE</option>
                                    <option <%= plataforma === "XBOX_360" && "selected" %> value="XBOX_360">XBOX 360</option>
                                    <option <%= plataforma === "Nintendo_Switch" && "selected" %> value="Nintendo_Switch">Nintendo Switch</option>
                                </select>
                            </div>
                            <div class="product-admin-stock">
                                <label for="stock">Stock Actual</label>
                                <input name="stock" type="number" id="stock" value="<%=stock%>">
                            </div>
                        </div>
                        <br>
                        <hr>
                        <br>
                        <label for="category"> Seleccione las categorias</label>
                        <div class="product-admin-category">
                            <input name="category" hidden type="checkbox" id="category" value="accion">
                        </div>
                        <div class="product-admin-categories">
                            <div class="product-admin-category">
                                <input name="category" type="checkbox" id="category" <%= categorias.includes("accion") && "checked" %> value="accion">
                                <label for="category">Acción</label>
                            </div>
                            <div class="product-admin-category">
                                <input name="category" type="checkbox" id="category" <%= categorias.includes("aventura") && "checked" %> value="aventura">
                                <label for="category">Aventura</label>
                            </div>
                            <div class="product-admin-category">
                                <input name="category" type="checkbox" id="category" <%= categorias.includes("carreras") && "checked" %> value="carreras">
                                <label for="category">Carreras</label>
                            </div>
                        </div>

                        <div class="product-admin-categories">
                            <div class="product-admin-category">
                                <input name="category" type="checkbox" id="category" <%= categorias.includes("deportes") && "checked" %> value="deportes">
                                <label for="category">Deportes</label>
                            </div>
                            <div class="product-admin-category">
                                <input name="category" type="checkbox" id="category" <%= categorias.includes("casual") && "checked" %> value="casual">
                                <label for="category">Casual</label>
                            </div>
                            <div class="product-admin-category">
                                <input name="category" type="checkbox" id="category" <%= categorias.includes("estrategia") && "checked" %> value="estrategia">
                                <label for="category">Estrategia</label>
                            </div>
                        </div>
                        <div class="product-admin-categories">
                            <div class="product-admin-category">
                                <input name="category" type="checkbox" id="category" <%= categorias.includes("multijugador") && "checked" %> value="multijugador">
                                <label for="category">Multijugador</label>
                            </div>
                            <div class="product-admin-category">
                                <input name="category" type="checkbox" id="category" <%= categorias.includes("rol") && "checked" %> value="rol">
                                <label for="category">Rol</label>
                            </div>
                            <div class="product-admin-category">
                                <input name="category" type="checkbox" id="category" <%= categorias.includes("simulacion") && "checked" %> value="simulacion">
                                <label for="category">Simulación</label>
                            </div>
                        </div>
                        <div class="product-admin-categories">
                            <div class="product-admin-category">
                                <input name="category" type="checkbox" id="category" <%= categorias.includes("plataformas") && "checked" %> value="plataformas">
                                <label for="category">Plataformas</label>
                            </div>
                            <div class="product-admin-category">
                                <input name="category" type="checkbox" id="category" <%= categorias.includes("realidad virtual") && "checked" %> value="realidad virtual">
                                <label for="category">Realidad Virtual</label>
                            </div>
                            <div class="product-admin-category">
                                <input name="category" type="checkbox" id="category" <%= categorias.includes("disparos") && "checked" %> value="disparos">
                                <label for="category">Disparos</label>
                            </div>
                        </div>
                        <br>
                        <hr>
                        <br>
                        <div>
                            <div class="product-admin-descripcion">
                                <label for="description">Descripción</label><br>
                                <textarea name="description" id="description" class="textarea-description" ><%=descripcion%></textarea>
                                </div>
                        </div>
                        <br>
                        <hr>
                        <br>
                        <div class="product-admin-img-pri">
                            <label for="imagenPrincipal">Imagen principal</label>
                            <input class="img-pri-input" name="imagenPrincipal" type="file" id="imagenPrincipal">
                        </div>
                        <div>
                            <button class="btn primary">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>
    



    <%- include('../partials/scripts') %>

</body>
</html>